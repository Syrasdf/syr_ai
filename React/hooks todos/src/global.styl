*
  margin: 0
  padding: 0
  box-sizing: border-box
  
body 
  font-family -apple-system , Arial , sans-serif // 字体选择 
  background #f5f5f5
  padding 2rem 

.app
  max-width 600px
  margin 0 auto
  background #fff
  padding 2rem
  border-radius 0.5rem
  box-shadow 0px 2px 6px rgba(0,0,0,0.7)

.header
  text-align center

.todo-input
  display flex
  gap 1rem
  margin-bottom 2rem

.todo-list
  list-style none
  padding 0
  .todo-item
    border-bottom 1px solid #ccc
    .completed
        text-decoration line-through
        color #aaa








